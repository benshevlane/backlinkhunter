# Supabase
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Optional: service role key for server-side admin operations
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# DataForSEO (domain metrics, backlink data)
DATAFORSEO_LOGIN=
DATAFORSEO_PASSWORD=

# Google Custom Search (discovery queries)
GOOGLE_CSE_API_KEY=
GOOGLE_CSE_ID=

# Hunter.io (contact enrichment)
HUNTER_API_KEY=

# Anthropic (site analysis, outreach generation)
ANTHROPIC_API_KEY=

# Gmail OAuth (email sending)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/gmail/callback

# Token encryption (generate with: openssl rand -hex 32)
TOKEN_ENCRYPTION_KEY=

# Stripe (billing)
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_GROWTH=
STRIPE_PRICE_AGENCY=

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Logging
LOG_LEVEL=info

# Feature flags (optional overrides â€” set to "true" or "false")
# By default, features are enabled when their API keys are configured
# FEATURE_DATAFORSEO=true
# FEATURE_GOOGLE_SEARCH=true
# FEATURE_HUNTER=true
# FEATURE_ANTHROPIC=true
# FEATURE_STRIPE=true
# FEATURE_LINK_VERIFICATION=true
